{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "builds": [
    { "src": "api/**/*.py",     "use": "@vercel/python" },
    { "src": "client/**/*",     "use": "@vercel/static" }
  ],
  
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.py" },
    { "src": "/(.*)",      "dest": "client/$1"    }
  ]
}
