{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,        
  "framework": null,
  "buildCommand": "",
  "outputDirectory": "client",
  "functions": {
    "api/**/*.py": { "runtime": "python3.12" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.py" },
    { "src": "/(.*)",      "dest": "/client/$1"   }
  ]
}
